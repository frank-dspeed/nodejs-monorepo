{
  "packageManager": "yarn@3.1.1",
  "name": "@straw-hat/javascript-monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "docs:typedoc": "yarn workspaces foreach run docs:typedoc",
    "build": "yarn workspaces foreach run build",
    "publish": "yarn workspaces foreach --no-private npm publish --tolerate-republish",
    "test:jest": "yarn jest",
    "format": "prettier --write */** --ignore-unknown --no-error-on-unmatched-pattern"
  },
  "devDependencies": {
    "@straw-hat/prettier-config": "^2.0.2",
    "@straw-hat/tsconfig": "^3.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "monodeploy": "^3.0.0-rc.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4"
  }
}
