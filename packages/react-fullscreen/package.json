{
  "name": "@straw-hat/react-fullscreen",
  "version": "4.0.0",
  "description": "React hook for interacting with the browser fullscreen API",
  "repository": {
    "type": "git",
    "url": "https://github.com/straw-hat-team/javascript-monorepo.git",
    "directory": "packages/react-fullscreen"
  },
  "license": "MIT",
  "keywords": [
    "fullscreen",
    "react",
    "ui",
    "straw-hat-team"
  ],
  "publishConfig": {
